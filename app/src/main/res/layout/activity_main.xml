<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".MainActivity">




    <TextView
        android:id="@+id/textViewWellcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Bienvenido: "
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="482dp"
        android:layout_height="33dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textViewWellcome"
        android:text="Julio Courbis"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textViewType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/listvale"
        android:layout_alignParentStart="true"
        android:text="Vale de material"
        android:textSize="24sp" />




    <ListView
        android:id="@+id/listvale"
        android:layout_width="match_parent"
        android:layout_height="331dp"
        android:layout_above="@+id/textView"

        android:layout_alignParentStart="true"
        android:background="@android:color/white" />

    <Button
        android:id="@+id/crearVale"
        android:layout_width="205dp"
        android:layout_height="102dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/insertar"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="50dp"
        android:text="Colaborador"
        tools:layout_editor_absoluteX="365dp"
        tools:layout_editor_absoluteY="698dp" />

    <Spinner
        android:id="@+id/spinnerElemento"
        android:layout_width="403dp"
        android:layout_height="53dp"
        android:layout_alignStart="@+id/insertar"
        android:layout_below="@+id/textView"
        android:layout_marginTop="10dp"
        android:entries="@array/pruebaMaterial"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:text="Material o herramienta"
        android:textSize="18sp"
        android:textStyle="normal|bold|italic" />

    <Button
        android:id="@+id/insertar"
        android:layout_width="wrap_content"
        android:layout_height="102dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="0dp"
        android:layout_marginStart="50dp"
        android:onClick="agregarItem"
        android:text="Insertar elemento"
        tools:layout_editor_absoluteX="491dp"
        tools:layout_editor_absoluteY="699dp" />

    <EditText
        android:id="@+id/editTextCantidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/spinnerElemento"
        android:layout_below="@+id/autoCompleteTextViewMaterial"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="cantidad"
        android:inputType="number" />

    <ImageButton
        android:id="@+id/imageButtonEntradaVoz"
        android:layout_width="104dp"
        android:layout_height="108dp"
        android:layout_above="@+id/crearVale"
        android:layout_marginBottom="20dp"
        android:layout_toEndOf="@+id/spinnerElemento"
        android:background="@drawable/btn_circle"
        android:src="@drawable/microphone_text" />

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextViewMaterial"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/spinnerElemento"
        android:layout_below="@+id/spinnerElemento"
        android:layout_marginTop="10dp"
        android:hint="Material" />

</RelativeLayout>